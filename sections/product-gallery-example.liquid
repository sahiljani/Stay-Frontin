{{ 'section-media-gallery-embla.css' | asset_url | stylesheet_tag }}

<div class="product-gallery-section">
  <div class="page-width">
    {%- assign product = all_products[section.settings.product] -%}

    {%- if product == blank -%}
      <div class="placeholder-content">
        <p>{{ 'sections.product_gallery.no_product' | t }}</p>
        <p>{{ 'sections.product_gallery.select_product' | t }}</p>
      </div>
    {%- else -%}
      <div class="product-gallery-wrapper">
        {% render 'product-media-gallery-embla',
          product: product,
          section: section,
          position: section.settings.thumbnail_position
        %}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Gallery (Embla)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "select",
      "id": "thumbnail_position",
      "label": "Thumbnail Position",
      "options": [
        {
          "value": "left",
          "label": "Left (Desktop) / Bottom (Mobile)"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "media_size",
      "label": "Media Size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Enable Video Looping",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Gallery (Embla)"
    }
  ]
}
{% endschema %}

{% style %}
  .product-gallery-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .product-gallery-wrapper {
    max-width: 1200px;
    margin: 0 auto;
  }

  .placeholder-content {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(var(--color-foreground), 0.04);
    border-radius: 8px;
  }

  .placeholder-content p {
    margin: 0.5rem 0;
    color: rgba(var(--color-foreground), 0.7);
  }
{% endstyle %}
